{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
	    "node_modules/**/*.ts",
	    "ext-src/**/*.ts"
    ]
  },
  "rules": {
    "max-classes-per-file": [true, 10, "exclude-class-expressions"],
    "object-literal-sort-keys": false,
    "no-console": false
  }
}
